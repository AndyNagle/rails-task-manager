<h1>My Tasks</h1>

<% @tasks.each do |task| %>
  <ul>
    <h3>
      <input type="checkbox" <%= "checked" if task.completed %>>
      <%= link_to task.title, task_path(task) %>
      <%= link_to task_path(task), method: :delete, data: {:confirm => 'Are you sure?'} do %>
      <i class="fa fa-camera-retro"></i>
      <% end %>
    </h3>
  </ul>
<% end %>

<%= link_to "Add a new task", tasks_new_path %>


