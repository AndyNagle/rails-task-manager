<h1>Add New Task</h1>



<%= form_for(@task) do |f| %>
  <div class="form-group">
  <%= f.label :title, "Enter a task name"  %>
  <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
  <%= f.label :details, "Enter a description"  %>
  <%= f.text_field :details, class: 'form-control' %>
  </div>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>
